<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".view.TomAndJerryGame">

    <!-- Top Brunch -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_top_mode_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_pati">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:src="@drawable/logotwo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Time Brunch -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/iv_time_mode_one"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/pause"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/tv_game_time"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/circle_black"
                    android:gravity="center"
                    android:text="Time: 30"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_pause_mode_one"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circle_black"
                    android:padding="3dp"
                    android:src="@drawable/pause"
                    app:layout_constraintEnd_toStartOf="@id/tv_game_time"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_score_mode_one"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circle_primary"
                    android:gravity="center"
                    android:text="20"
                    app:layout_constraintStart_toEndOf="@id/tv_top_score_mode_one"
                    app:layout_constraintBottom_toBottomOf="@id/tv_top_score_mode_one"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/tv_top_score_mode_one"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="50"
                    android:background="@drawable/circle_primary"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/iv_kupa_mode_one"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"
                    />

                <ImageView
                    android:id="@+id/iv_kupa_mode_one"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/kupa"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>


    <!-- Image Brunch -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_bottom_mode_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridLayout"
            android:background="@drawable/cv_background_stroke_black">

            <ImageView
                android:id="@+id/jerryImageView1"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="imageClick"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/jerryImageView2"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="0"
                android:layout_column="1"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView3"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="0"
                android:layout_column="2"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView4"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="0"
                android:layout_column="3"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView5"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="1"
                android:layout_column="0"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView6"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="1"
                android:layout_column="1"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView7"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="1"
                android:layout_column="2"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView8"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="1"
                android:layout_column="3"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView9"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="2"
                android:layout_column="0"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView10"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="2"
                android:layout_column="1"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView11"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="2"
                android:layout_column="2"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView12"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="2"
                android:layout_column="3"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView13"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="3"
                android:layout_column="0"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView14"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="3"
                android:layout_column="1"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView15"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="3"
                android:layout_column="2"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible"

                />

            <ImageView
                android:id="@+id/jerryImageView16"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_row="3"
                android:layout_column="3"
                android:padding="5dp"
                android:src="@drawable/jerry"
                android:visibility="invisible" />

        </GridLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>






