<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".view.ResultFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:weightSum="14"
                android:id="@+id/ll_result_top"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:text="GAME OVER"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:gravity="center_horizontal|bottom" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:src="@drawable/gameover"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_score_game"
                    android:layout_weight="6"
                    android:layout_marginHorizontal="50dp"
                    android:background="@drawable/bt_background_stroke_8"
                    android:text="50"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ll_result_bottom"
                android:orientation="vertical"
                android:layout_weight="3"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/iv_game_over"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/home" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:id="@+id/bt_menu"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@id/iv_game_over"
                        android:background="@drawable/bt_background_stroke_8"
                        android:text="HOME"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/iv_game_over_two"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/exit" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="120dp"
                        android:layout_height="60dp"
                        android:id="@+id/bt_exit"
                        android:layout_marginStart="10dp"
                        android:text="EXIT"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_toEndOf="@id/iv_game_over_two"
                        android:background="@drawable/bt_background_stroke_8"/>

                </RelativeLayout>




            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>








</LinearLayout>


